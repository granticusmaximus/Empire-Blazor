@page "/analyst/delete/{BAID:int}"
@using Empire.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager
<h2>Delete Analyst</h2>
<br />
<div class="form-group">
    <h4>Do you want to delete this analyst?</h4>
    <table class="table">
        <tbody>
            <tr>
                <td>Name</td>
                <td>@analyst.BAFullname</td>
            </tr>
            <tr>
                <td>Cell No</td>
                <td>@analyst.Phone</td>
            </tr>
            <tr>
                <td>E-mail</td>
                <td>@analyst.Email</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="form-group">
    <input type="submit" value="Delete" @onclick="(async () => await RemoveUser(analyst.BAID))" class="btn btn-danger" />
    <input type="submit" value="Cancel" @onclick="(() => Cancel())" class="btn btn-warning" />
</div>
@code {
    [Parameter]
    public int baId { get; set; }
    Analyst analyst = new Analyst();
    protected override async Task OnInitializedAsync()
    {
        analyst = await Http.GetFromJsonAsync<Analyst>("/api/Analyst/" + Convert.ToInt32(baId));
    }
    protected async Task RemoveUser(int baID)
    {
        await Http.DeleteAsync("api/User/" + baID);
        NavigationManager.NavigateTo("/fetchanalystdetails");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("/fetchanalystdetails");
    }
}