@page "/DeleteUser/{Id}"
@using Empire.Data
@using Empire.Models
@using Empire.Service
@inject ApplicationUserService userService
@inject NavigationManager NavigationManager

<h2>Delete Employee</h2>
<hr />
<h3>Are you sure want to delete this?</h3>
<form>
    <div class="row">
        <div class=" col-md-12">
            <div class="form-group">
                <label>Employee Name:</label>
                <label>@obj.FullName</label>
            </div>
            <div class="form-group">
                <label>Desigation:</label>
                <label>@obj.Designation</label>
            </div>
            <div class="form-group">
                <label>Gender:</label>
                <label>@obj.Gender</label>
            </div>
            <div class="form-group">
                <label>City:</label>
                <label>@obj.City</label>
            </div>
            <div class="form-group">
                <label>Phone:</label>
                <label>@obj.Cellnumber</label>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <label>@obj.Email</label>
            </div>
            <div class="form-group">
                <label>Role:</label>
                <label>@obj.Role</label>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-danger" @onclick="@DeleteUser" value="Delete" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string Id { get; set; }
    ApplicationUser obj = new ApplicationUser();
    protected override async Task OnInitializedAsync()
    {
        obj = await Task.Run(() => userService.GetUserAsync(obj.Id));
    }
    protected async void DeleteUser()
    {
        await userService.DeleteUserAsync(obj);
        NavigationManager.NavigateTo("Users");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Users");
    }
}