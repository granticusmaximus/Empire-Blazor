@page "/AddApp"
@using Empire.Data
@using Empire.Models
@using Empire.Service
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext context
@inject IJSRuntime JSRuntime
@inject AppService appService

<h3>Create New App</h3>

<EditForm Model="newApp" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="AppName">Application Name:</label>
        <InputText id="AppName" class="form-control" @bind-Value="newApp.AppName" placeholder="Enter application name" />
    </div>

    <div class="form-group">
        <label for="POC">POC/Owner:</label>
        <InputText id="POC" class="form-control" @bind-Value="newApp.POC" placeholder="Enter name of POC/Owner" />
    </div>

    <div class="form-group">
        <label for="Telephone">POC #:</label>
        <InputText id="Telephone" class="form-control" @bind-Value="newApp.Telephone" placeholder="Enter POC's phone number" />
    </div>

    <div class="form-group">
        <label for="POCEmail">POC Email:</label>
        <InputText id="POCEmail" class="form-control" @bind-Value="newApp.POCEmail" placeholder="Enter POC's email" />
    </div>

    <div class="form-group">
        <label for="AppNotes">Purpose:</label>
        <InputTextArea id="AppNotes" class="form-control" @bind-Value="newApp.AppNotes" placeholder="Enter purpose of the application" />
    </div>
    <hr/>

    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>

@code {
    private AppList newApp = new AppList();

    private async Task HandleValidSubmit()
    {
        bool isCreated = await appService.CreateNewAppAsync(newApp);
        if (isCreated)
        {
            newApp = new AppList();
            await JSRuntime.InvokeVoidAsync("alert", "Application created successfully!");
        }
        else
        {
            // Handle the failure scenario, perhaps show a message to the user
        }
    }
}
